{
	"root": true,
	"settings": {
		"react": {
			"version": "detect"
		}
	},
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"plugin:import/recommended",
		"prettier"
	],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": [
		"react",
		"import",
		"prettier"
	],
	"ignorePatterns": [
		"*.test.js",
		"*.test.tsx"
	],
	"rules": {
		"react/jsx-first-prop-new-line": [1,
			"multiline"
		],
		"react/jsx-max-props-per-line": [1,
			{
				"maximum": 1
			}
		],
		"react/jsx-filename-extension": [1,
			{
				"extensions": [
					".js", ".jsx"
				]
			}
		],
		"react/react-in-jsx-scope": "off"
	}
}
